# Environment Configuration for Enhanced Calculator MVC
# Copy this file to .env and customize as needed

# Server Configuration
PORT=3004
NODE_ENV=development

# Application Settings
APP_NAME="Enhanced Calculator API"
APP_VERSION="2.0.0"

# CORS Configuration
CORS_ORIGIN=http://localhost:3004,http://localhost:3000,http://127.0.0.1:3004

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=dev

# Calculator Settings
MAX_HISTORY_SIZE=100
PRECISION_DIGITS=10
MAX_SAFE_NUMBER=9007199254740991
MIN_SAFE_NUMBER=-9007199254740991

# Security Settings
REQUEST_SIZE_LIMIT=10mb
ENABLE_HELMET=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Health Check Settings
HEALTH_CHECK_INTERVAL=30000
MEMORY_THRESHOLD_MB=100

# Development Settings
DEBUG_MODE=false
ENABLE_SWAGGER=true
ENABLE_METRICS=false

# Testing Configuration
TEST_PORT=3005
TEST_TIMEOUT=5000

# Database Settings (for future exercises)
# DB_HOST=localhost
# DB_PORT=27017
# DB_NAME=calculator_app

# Redis Settings (for future exercises)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Authentication (for future exercises)
# JWT_SECRET=your-secret-key-here
# JWT_EXPIRES_IN=1h
# BCRYPT_ROUNDS=12

# External APIs (for future exercises)
# EXTERNAL_API_KEY=your-api-key
# EXTERNAL_API_URL=https://api.example.com

# Monitoring (for future exercises)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key
